<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <div class="hero-unit">
    <h1><%= title %></h1>

  </div>
  <div class="row-fluid profile_wrapper">
    <div class="well">
      <form class="form-horizontal">
        <fieldset>
          <legend>Contact me</legend>

          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Email</th>
                <th>LinkedIn</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td> cmorenop@my.centennialcollege.ca</td>
                <td><a href="https://www.linkedin.com/in/cristopher-moreno-190722230/">Cristopher Moreno Profile</a></td>
              </tr>
            </tbody>
          </table>

          <div class="control-group">
            <label class="control-label" for="input01">Email</label>
            <div class="controls">
              <input type="text" class="input-xlarge" id="input01">
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="textarea">Comment</label>
            <div class="controls">
              <textarea style="resize: none;" class="input-xlarge" id="textarea" rows="3"></textarea>
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary" id="send">Send</button>
            <button class="btn">Cancel</button>
          </div>

        </fieldset>
      </form>
    </div>

  </div>
  <script>
    var element = document.getElementById("send");
    element.addEventListener("click", function (e) {
      e.preventDefault();
      console.log("clicked");
      window.location.replace("/");

    });
  </script>
  <%- include('../partials/footer'); %>
</body>
</html>